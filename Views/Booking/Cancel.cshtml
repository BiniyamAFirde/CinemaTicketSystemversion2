@model CinemaTicketSystem.Models.Booking

@{
    ViewData["Title"] = "Cancel Booking";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">Cancel Booking</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Warning:</strong> Are you sure you want to cancel this booking? This action cannot be undone, and your seats will be released.
                    </div>

                    <div class="booking-details">
                        <p><strong>Movie:</strong> @Model.Screening?.Movie?.Title</p>
                        <p><strong>Cinema:</strong> @Model.Screening?.Cinema?.Name</p>
                        <p><strong>Date & Time:</strong> @Model.Screening?.ScreeningDateTime.ToString("g")</p>
                        <p><strong>Booking Date:</strong> @Model.BookingDate.ToString("g")</p>
                        <p><strong>Total Seats:</strong> @Model.Seats.Count</p>
                        <p><strong>Refund Amount:</strong> <span class="text-success font-weight-bold">@Model.TotalPrice.ToString("C")</span></p>

                        @if (Model.Seats.Any())
                        {
                            <p><strong>Seats:</strong></p>
                            <div class="seat-list">
                                @foreach (var seat in Model.Seats.OrderBy(s => s.Row).ThenBy(s => s.SeatNumber))
                                {
                                    <span class="badge badge-info">Row @seat.Row, Seat @seat.SeatNumber</span>
                                }
                            </div>
                        }
                    </div>

                    <hr />

                    <form asp-action="Cancel">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" name="version" value="@Model.Version?.ToString("o")" />
                        <button type="submit" class="btn btn-danger">Yes, Cancel Booking</button>
                        <a href="@Url.Action("Bookings", "Account")" class="btn btn-secondary">No, Keep Booking</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .seat-list {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin: 10px 0;
    }

    .badge {
        padding: 8px 12px;
        font-size: 13px;
    }
</style>
