@model IEnumerable<CinemaTicketSystem.Models.Movie>

@{
    ViewData["Title"] = "Movies Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1">
            <i class="fas fa-film me-2" style="color: #e50914;"></i>Movies Management
        </h2>
        <p class="text-secondary mb-0">Manage all movies in the system</p>
    </div>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus-circle me-2"></i>Add New Movie
    </a>
</div>

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th style="width: 35%;">
                            <i class="fas fa-heading me-2"></i>@Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th style="width: 20%;">
                            <i class="fas fa-theater-masks me-2"></i>@Html.DisplayNameFor(model => model.Genre)
                        </th>
                        <th style="width: 15%;">
                            <i class="fas fa-clock me-2"></i>@Html.DisplayNameFor(model => model.DurationMinutes)
                        </th>
                        <th style="width: 15%;">
                            <i class="fas fa-calendar-alt me-2"></i>@Html.DisplayNameFor(model => model.ReleaseDate)
                        </th>
                        <th style="width: 15%;" class="text-center">
                            <i class="fas fa-cog me-2"></i>Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@Html.DisplayFor(modelItem => item.Title)</td>
                                <td>
                                    <span class="badge" style="background: rgba(229, 9, 20, 0.2); color: #e50914; padding: 6px 12px; border-radius: 6px;">
                                        @Html.DisplayFor(modelItem => item.Genre)
                                    </span>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.DurationMinutes) min</td>
                                <td>@item.ReleaseDate.ToString("MMM d, yyyy")</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-light" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-light" title="Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5">
                                <i class="fas fa-film fa-3x mb-3 d-block" style="color: #e50914; opacity: 0.3;"></i>
                                <p class="text-secondary mb-0">No movies found. Add your first movie to get started!</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .btn-outline-light {
        border-color: rgba(255, 255, 255, 0.2);
        color: #fff;
        background: rgba(255, 255, 255, 0.05);
    }

    .btn-outline-light:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.3);
    }

    .btn-outline-danger {
        border-color: rgba(220, 53, 69, 0.3);
        color: #dc3545;
        background: rgba(220, 53, 69, 0.05);
    }

    .btn-outline-danger:hover {
        background: rgba(220, 53, 69, 0.2);
        border-color: rgba(220, 53, 69, 0.5);
        color: #dc3545;
    }
</style>