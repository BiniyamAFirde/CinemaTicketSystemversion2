@using CinemaTicketSystem.Models
@model IEnumerable<Screening>

@{
    ViewData["Title"] = "Screenings";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1">
            <i class="fas fa-calendar-alt me-2" style="color: #e50914;"></i>Available Screenings
        </h2>
        <p class="text-secondary mb-0">Browse and book your preferred movie screening</p>
    </div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle me-2"></i>Add Screening
        </a>
    }
</div>

@if (Model.Any())
{
    <div class="row g-4">
        @foreach (var screening in Model)
        {
            var availableSeats = screening.Seats.Count(s => s.Status == SeatStatus.Available);
            var totalSeats = screening.Seats.Count;
            var occupancyPercent = totalSeats > 0 ? ((totalSeats - availableSeats) * 100.0 / totalSeats) : 0;
            var isAlmostFull = availableSeats < (totalSeats * 0.2);
            var isSoldOut = availableSeats == 0;
            
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 position-relative">
                    @if (isSoldOut)
                    {
                        <div class="position-absolute top-0 end-0 m-3">
                            <span class="badge bg-danger fs-6 px-3 py-2">
                                <i class="fas fa-exclamation-circle me-1"></i>SOLD OUT
                            </span>
                        </div>
                    }
                    else if (isAlmostFull)
                    {
                        <div class="position-absolute top-0 end-0 m-3">
                            <span class="badge bg-warning text-dark fs-6 px-3 py-2">
                                <i class="fas fa-fire me-1"></i>FILLING FAST
                            </span>
                        </div>
                    }
                    
                    <div class="card-body">
                        <h5 class="card-title fw-bold mb-3">@screening.Movie?.Title</h5>
                        
                        <div class="mb-3">
                            <p class="text-secondary mb-2">
                                <i class="fas fa-building me-2" style="color: #e50914;"></i>
                                <span class="fw-semibold">Cinema:</span> @screening.Cinema?.Name
                            </p>
                            <p class="text-secondary mb-2">
                                <i class="fas fa-couch me-2" style="color: #e50914;"></i>
                                <span class="fw-semibold">Layout:</span> @screening.Cinema?.Rows rows × @screening.Cinema?.SeatsPerRow seats
                            </p>
                            <p class="text-secondary mb-2">
                                <i class="fas fa-clock me-2" style="color: #e50914;"></i>
                                <span class="fw-semibold">Date & Time:</span> @screening.ScreeningDateTime.ToString("ddd, MMM d, yyyy 'at' h:mm tt")
                            </p>
                            <p class="text-secondary mb-2">
                                <i class="fas fa-money-bill-wave me-2" style="color: #e50914;"></i>
                                <span class="fw-semibold">Price:</span> <span class="fs-5 fw-bold" style="color: #e50914;">€@screening.TicketPrice.ToString("F2")</span>
                            </p>
                        </div>

                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-secondary fw-semibold">
                                    <i class="fas fa-chair me-2" style="color: #e50914;"></i>Seats Available
                                </span>
                                <span class="fw-bold" style="color: @(isSoldOut ? "#dc3545" : isAlmostFull ? "#ffc107" : "#28a745");">
                                    @availableSeats / @totalSeats
                                </span>
                            </div>
                            <div class="progress" style="height: 8px; background: rgba(255, 255, 255, 0.1);">
                                <div class="progress-bar" 
                                     role="progressbar" 
                                     style="width: @occupancyPercent%; background: linear-gradient(135deg, @(isSoldOut ? "#dc3545" : isAlmostFull ? "#ffc107" : "#e50914") 0%, @(isSoldOut ? "#c82333" : isAlmostFull ? "#e0a800" : "#831010") 100%);"
                                     aria-valuenow="@occupancyPercent" 
                                     aria-valuemin="0" 
                                     aria-valuemax="100">
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-footer">
                        <div class="d-grid gap-2">
                            @if (User.Identity?.IsAuthenticated == true && !isSoldOut)
                            {
                                <a asp-controller="Booking" asp-action="Create" asp-route-screeningId="@screening.Id" class="btn btn-primary">
                                    <i class="fas fa-ticket-alt me-2"></i>Book Now
                                </a>
                            }
                            else if (isSoldOut)
                            {
                                <button class="btn btn-secondary" disabled>
                                    <i class="fas fa-times-circle me-2"></i>Sold Out
                                </button>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Url.Action("Create", "Booking", new { screeningId = screening.Id })" class="btn btn-primary">
                                    <i class="fas fa-sign-in-alt me-2"></i>Login to Book
                                </a>
                            }
                            
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Delete" asp-route-id="@screening.Id" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash me-2"></i>Delete Screening
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="card border-0" style="background: rgba(255, 255, 255, 0.02);">
            <div class="card-body py-5">
                <i class="fas fa-calendar-times fa-5x mb-4" style="color: #e50914; opacity: 0.3;"></i>
                <h3 class="text-secondary mb-3">No Screenings Available</h3>
                <p class="text-muted">Check back soon for upcoming shows!</p>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Create" class="btn btn-primary mt-3">
                        <i class="fas fa-plus-circle me-2"></i>Add First Screening
                    </a>
                }
            </div>
        </div>
    </div>
}